@model Tasks.ViewModal.CountryVm

<section>
    @{
        string actionName;
        if (Model.Cid != 0)
        {
            actionName = "EditC";
        }
        else
        {
            actionName = "CreateC";
        }
    }
    <form asp-action="@actionName" asp-controller="AutoMapperDashboard" method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-md-2"></div>
                <div class=" col-md-8">
                    @Html.HiddenFor(x => x.Cid)
                    <div class="modal fade" id="Mstudent" style="background-color: #00000094;">
                        <div class="modal-dialog modal-lg ">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">
                                        @{
                                            if (actionName == "EditC")
                                            {
                                                <lavel>Edit Country</lavel>
                                            }
                                            else
                                            {
                                                <lavel>Add Country</lavel>
                                            }
                                        }
                                    </h4>
                                    <button type="button" class="close" data-bs-dismiss="modal">
                                        <span class="btn btn-danger">x</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label asp-for="CName" class="control-label"></label>
                                        <input asp-for="CName" class="form-control" />
                                        <span asp-validation-for="CName" class="text-danger"></span>
                                    </div><br />
                                    <div class="form-group">
                                        @if (Model.Cid != 0)
                                        {
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i>&nbspClose</button>
                                            <button type="submit" asp-action="EditC" value="Update" class="btn btn-primary"><i class="bi bi-pencil"></i>&nbspUpdate</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i>&nbspClose</button>
                                            <button type="submit" value="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>&nbspCreate</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </div>
        </div>
    </form>
</section>
<script src="~/js/site.js"></script>