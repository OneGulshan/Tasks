@model Tasks.Models.Teacher

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(m => m.Id)
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="Country" id="Country" asp-items="@ViewBag.Country" class="form-control">
                    <option value="-1"> --Select Country-- </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" id="States" asp-items="@ViewBag.State" class="form-control">
                    <option value="-1"> --Select State-- </option>
                </select>
            </div><br />
            <div class="form-group">
                <input type="submit" value="@ViewBag.BT" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#Country").on("change", function () {
                $('#States').empty();
                $('#States').append('<option value=' + 0 + ' >' + ' --Select States-- ' + '</option >');

                $.ajax({
                    type: "Post",
                    url: "/CascadeDropDownList/GetStates",
                    data: { "CId": $('#Country :selected').val() },
                    success: function (response) {
                        var items = '';
                        items += "<option value=" + 0 + " > " + " --Select States--";
                        $(response).each(function (response) {
                            items += "<option value=" + this.value + ">" + this.text + "</option>";
                        })
                        $("#States").html(items);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            })
        });

    </script>
}

